# Customize PS1

# Text color sequences.

# \033[0;30m    -   black
# \033[0;31m    -   red
# \033[0;32m    -   green
# \033[0;33m    -   brown
# \033[0;34m    -   blue
# \033[0;35m    -   purple
# \033[0;36m    -   cyan
# \033[0;37m    -   light gray
# \033[1;30m    -   dark gray
# \033[1;31m    -   light red
# \033[1;32m    -   light green
# \033[1;33m    -   yellow
# \033[1;34m    -   light blue
# \033[1;35m    -   light purple
# \033[1;36m    -   light cyan
# \033[1;37m    -   white

# Background color sequences

# \033[0;40m    -   black
# \033[0;41m    -   red
# \033[0;42m    -   green
# \033[0;43m    -   brown
# \033[0;44m    -   blue
# \033[0;45m    -   purple
# \033[0;46m    -   cyan
# \033[0;47m    -   light gray

# Add Git repository details.
source ~/.git-prompt.sh

export GIT_PS1_SHOWDIRTYSTATE=1

PS1=' \[\033[1;34m\]\u ' # username
PS1+=$'\[\033[1;30m\]\u26A1 '
PS1+='\[\033[1;34m\]\h' # host
PS1+=' \[\033[0;32m\]\W ' # working directory
PS1+='\[\033[0;33m\]$(__git_ps1 "(%s) ")' # Git repository details.
PS1+='\$\[\033[0m\] '

export PS1
